                    <!--</list>-->
                <!--</entry>-->
            <!--</map>-->
        <!--</property>-->
        <property name="clusterConfig">
            <map>
                <entry key="getorder" value="cluster:fail-over,retry:2,timeout-retry:0"/>
            </map>
        </property>
	</bean>
	
